    switch(e.type)
    {
    	case 'error':
        	lblMensajeError='Ha ocurrido un problema con la conexi&oacute;n a '+lblAplicacion+' Utilities, verifique que la aplicaci&oacute;n se encuentre en ejecuci&oacute;n';
        break;
    }
    msgBox(lblMensajeError);
    
}

