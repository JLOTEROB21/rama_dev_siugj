function regresarGuardar(bandera)
{
	switch(bandera)
    {
    	case 'nIdentifica':
        	gE('imgUsr').setAttribute('src','../Usuarios/verFoto.php?Id='+gE('idUsuario').value+'&rand='+(new Date().format('YmdHis')));
            gEx('frameContenidoUsuario').load	(
                                                    {
