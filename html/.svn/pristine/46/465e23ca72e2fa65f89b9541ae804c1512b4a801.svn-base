                                                        params:		{
                                                                        idUsuario:gE('idUsuario').value,
                                                                        bandera:1,
                                                                        actualizado:1,
                                                                        cPagina:'sFrm=true'
                                                                    }
                                                    }
                                                    
                                                )
		break;
        case 'nUsuarios':
        	
            gEx('frameContenidoUsuario').load	(
                                                    {
                                                        url:'../Usuarios/nUsuarios.php',
                                                        params:		{
                                                                        idUsuario:gE('idUsuario').value,
                                                                        bandera:1,
                                                                        actualizado:1,
                                                                        vCU:gE('vCU').value,
