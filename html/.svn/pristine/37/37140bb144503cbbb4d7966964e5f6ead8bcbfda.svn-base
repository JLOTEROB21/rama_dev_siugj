                                            			cmbFormato
													]
										}
									);
	
	var ventanaAM = new Ext.Window(
									{
										title: 'Agregar formato',
										width: 700,
										height:140,
										layout: 'fit',
										plain:true,
										modal:true,
										bodyStyle:'padding:5px;',
										buttonAlign:'center',
										items: form,
										listeners : {
