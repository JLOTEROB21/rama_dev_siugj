																								{
																									tblGrid.getStore().remove(fila);
																								}
																								else
																								{
																									msgBox('<?php echo $etj["errOperacion"]?>'+' <br />'+arrResp[0]);
																								}
																							}
																							obtenerDatosWeb('../paginasFunciones/funcionesModulosEspeciales_SGP.php',funcAjax, 
